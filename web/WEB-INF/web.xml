<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterInvalidAccess</filter-name>
        <filter-class>Filter.FilterInvalidAccess</filter-class>
    </filter>
    <filter>
        <filter-name>FilterAdminAccess</filter-name>
        <filter-class>Filter.FilterAdminAccess</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterInvalidAccess</filter-name>
        <url-pattern>/landingPageUser.jsp </url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterInvalidAccess</filter-name>
        <url-pattern>/landingPageAdmin.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterAdminAccess</filter-name>
        <url-pattern>/landingPageAdmin.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>DeleteUserController</servlet-name>
        <servlet-class>ControlServlet.DeleteUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewListUserServlet</servlet-name>
        <servlet-class>ControlServlet.ViewListUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewDetailsUserServlet</servlet-name>
        <servlet-class>ControlServlet.ViewDetailsUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>ControlServlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ControlServlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ControlServlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewListBookingServlet</servlet-name>
        <servlet-class>ControlServlet.ViewListBookingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewScheduleWhenBooking</servlet-name>
        <servlet-class>ControlServlet.ViewScheduleWhenBooking</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUserInfoServlet</servlet-name>
        <servlet-class>ControlServlet.UpdateUserInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserController</servlet-name>
        <url-pattern>/DeleteUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewListUserServlet</servlet-name>
        <url-pattern>/ViewListUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewDetailsUserServlet</servlet-name>
        <url-pattern>/ViewDetailsUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewListBookingServlet</servlet-name>
        <url-pattern>/ViewListBookingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewScheduleWhenBooking</servlet-name>
        <url-pattern>/ViewScheduleWhenBooking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUserInfoServlet</servlet-name>
        <url-pattern>/UpdateUserInfoServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
